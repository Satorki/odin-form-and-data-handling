<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
  <body>
    <h1><%= title %></h1>
    <!-- In views/index.ejs -->
    <ul>
      <% if (locals.users) {%> <% users.forEach(function(user) { %>
      <li>
        ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>,
        Age: <%= user.age %>, Email: <%= user.email %>,Bio: <%= user.bio %>,
      </li>
      <a href="/users/<%= user.id %>/update">Update</a>
      <!-- This time we're sending a POST request to our route, so we need a form. -->
      <form
        action="/users/<%= user.id %>/delete"
        method="POST"
        style="display: inline"
      >
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this user?');"
        >
          Delete
        </button>
      </form>
      <% }); %> <% } %>
    </ul>
    <a href="/users/create">Create a user</a>
    <br />
    <a href="/users/search">Search for user</a>
  </body>
</html>
