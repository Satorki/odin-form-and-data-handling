<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title%></h1>
    <form action="/users/search" method="POST">
      <label for="nameSearch">Name: </label>
      <input type="text" name="nameSearch" id="nameSearch" />
      <label for="emailSearch">Email: </label>
      <input type="text" name="emailSearch" id="emailSearch" />
      <button type="submit">Search</button>
    </form>

    <ul>
      <% if (users && users.length > 0) {%> <% users.forEach(function(user) { %>
      <li>
        ID: <%= user.id %>, Name: <%= user.firstName %> <%= user.lastName %>,
        Age: <%= user.age %>, Email: <%= user.email %>,Bio: <%= user.bio %>,
      </li>
      <% }); %> <% } %>
    </ul>
    <a href="/">Back to Home</a>
  </body>
</html>
